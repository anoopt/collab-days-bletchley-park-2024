{
    "messages": [
        {
            "role": "system",
            "content": [
                {
                    "type": "text",
                    "text": "You are a helpful translator."
                }
            ]
        },
        {
            "role": "user",
            "content": [
                {
                    "type": "text",
                    "text": "1 short sentence summary in English, French and Spanish of this: {{content}}"
                }
            ]
        }
    ],
    "temperature": 0,
    "max_tokens": 256,
    "top_p": 1.0,
    "frequency_penalty": 0.0,
    "presence_penalty": 0.0,
    "response_format": {
        "type": "json_schema",
        "json_schema": {
            "name": "multilingual_summary",
            "strict": true,
            "schema": {
                "type": "object",
                "properties": {
                    "summaries": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "language": {
                                    "type": "string"
                                },
                                "shortSummary": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "language",
                                "shortSummary"
                            ],
                            "additionalProperties": false
                        }
                    }
                },
                "required": [
                    "summaries"
                ],
                "additionalProperties": false
            }
        }
    }
}